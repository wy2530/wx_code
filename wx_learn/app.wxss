/**app.wxss**/
/* 引入字体图标 */
@import "./styles/iconfont.wxss";

/* 全局样式：注意不支持通配符 */
page,view,text,swiper,swiper-item,image,navigator{
  padding:0;
  margin:0;
  box-sizing:border-box;
}

/* 
定义主题颜色 ：可以通过变量来实现
*/
page{
  --themeColor:#f0513d;
  /* 定义统一字体大小   与设计稿有关(375px是标准)*/
  font-size: 28rpx;
}

/* 图片*/
image{
  width: 100%;
}